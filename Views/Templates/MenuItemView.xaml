             x:Class="MauiApp2.Views.Templates.MenuItemView">
    
    <Grid ColumnDefinitions="3.5*, 4*, 2.5*">
        <Grid Grid.Column="0">
            
        </Grid>
        <Grid Grid.Column="1">
            <VerticalStackLayout>
                <Label />
                <Label />
            </VerticalStackLayout>
            
            <HorizontalStackLayout x:Name="ratings">
                <Image />
                <Label Text="{Binding MenuItemRatings}" />
            </HorizontalStackLayout>
            
            <Grid x:Name="counter">
                
            </Grid>
        </Grid>
        
        <Grid Grid.Column="2">
            
        </Grid>
        
    </Grid>
</ContentView>
