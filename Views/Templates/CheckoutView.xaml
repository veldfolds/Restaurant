<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Views.Templates.CheckoutView">

    <Grid ColumnDefinitions="*,*">
        <Grid x:Name="platesView">
            <Image x:Name="firstPlate" />
            
            <StackLayout x:Name="remainingPlates" Grid.Column="0" Orientation="Horizontal">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Image TranslationX="-15" />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </Grid>

        <Grid x:Name="amountView" RowDefinitions="Auto, Auto, *">
            <Label Text="Total Amount"/>
            <Label Text="{Binding TotalPrice}" />
            <Grid>
                <HorizontalStackLayout Spacing="15">
                    <Label Text="Pay"/>
                    <Image Source="iconarrow" />
                </HorizontalStackLayout>
            </Grid>
        </Grid>
    </Grid>
</ContentView>
